#!/usr/bin/env bash

# fail fast
set -e

# debug
# set -x

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}



echo "-----> Found a hello.txt"

# if hello.txt is empty, abort the build
if [ ! -s $1/hello.txt ]; then
  echo "hello.txt was empty" | indent
  exit 1
fi



APT_CACHE_DIR="$CACHE_DIR/apt/cache"
APT_STATE_DIR="$CACHE_DIR/apt/state"

mkdir -p "$APT_CACHE_DIR/archives/partial"
mkdir -p "$APT_STATE_DIR/lists/partial"

APT_OPTIONS="-o debug::nolocking=true -o dir::cache=$APT_CACHE_DIR -o dir::state=$APT_STATE_DIR"
 
topic "Updating apt caches"
apt-get $APT_OPTIONS update | indent
# apt-get $APT_OPTIONS -y --force-yes -d install --reinstall libffi6 | indent
# apt-get $APT_OPTIONS -y --force-yes -d install --reinstall libgc1c2 | indent
# apt-get $APT_OPTIONS -y --force-yes -d install --reinstall libgmp10 | indent
# apt-get $APT_OPTIONS -y --force-yes -d install --reinstall libltdl7 | indent
# apt-get $APT_OPTIONS -y --force-yes -d install --reinstall libtinfo5 | indent
# apt-get $APT_OPTIONS -y --force-yes -d install --reinstall readline-common | indent
# apt-get $APT_OPTIONS -y --force-yes -d install --reinstall libreadline6 | indent
# apt-get $APT_OPTIONS -y --force-yes -d install --reinstall multiarch-support | indent
# apt-get $APT_OPTIONS -y --force-yes -d install --reinstall libunistring0 | indent
apt-get $APT_OPTIONS -y --force-yes -d install --reinstall guile-2.0 | indent

mkdir -p $BUILD_DIR/.apt

for DEB in $(ls -1 $APT_CACHE_DIR/archives/*.deb); do
  topic "Installing $(basename $DEB)"
  dpkg -x $DEB $BUILD_DIR/.apt/
done

export LD_LIBRARY_PATH=/lib:/usr/lib:/usr/local/lib:$BUILD_DIR/.apt/usr/lib;$BUILD_DIR/.apt/usr/bin/guile-2.0 --version
# find / -iname *guile* | indent
# ls -A /app/tmp/cache/apt/cache/archives/
# dpkg -i /app/tmp/cache/apt/cache/archives/libgc1c2_1%3a7.4.2-7.3ubuntu0.1_amd64.deb
# ls -A /usr/local/bin

# replace hello with goodbye in a new file
cat $1/hello.txt | sed -e "s/[Hh]ello/Goodbye/g" > $1/goodbye.txt
